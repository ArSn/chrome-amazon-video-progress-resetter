{
  "name": "Amazon Video Progress Resetter",
  "author": "Kolja 'ArSn' Zuelsdorf <koljaz@web.de>",
  "version": "0.1",
  "description": "Reset the Amazon Video progress of whole seasons with a single click. Perfect for re-watching tv shows.",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "20": "images/logo-20.png",
    "40": "images/logo-40.png",
    "48": "images/logo-40.png",
    "60": "images/logo-60.png",
    "80": "images/logo-80.png",
    "200": "images/logo-200.png",
    "668": "images/logo-668.png"
  },
  "page_action": {
    "default_icon": {
      "20": "images/logo-20-gray.png",
      "40": "images/logo-40-gray.png",
      "60": "images/logo-60-gray.png",
      "80": "images/logo-80-gray.png",
      "200": "images/logo-200-gray.png",
      "668": "images/logo-668-gray.png"
    },
    "default_title": "Rewind Videos"
  },
    "content_scripts": [
      {
        "matches": [
          "*://*.amazon.com.au/*",
          "*://*.amazon.com.br/*",
          "*://*.amazon.ca/*",
          "*://*.amazon.cn/*",
          "*://*.amazon.fr/*",
          "*://*.amazon.de/*",
          "*://*.amazon.in/*",
          "*://*.amazon.it/*",
          "*://*.amazon.co.jp/*",
          "*://*.amazon.com.mx/*",
          "*://*.amazon.es/*",
          "*://*.amazon.co.uk/*",
          "*://*.amazon.com/*"
        ],
        "js": [
          "page-action-handler.js"
        ]
      }
    ],
  "permissions": [
    "tabs",
    "activeTab",
    "https://www.amazon.com.au/",
    "https://www.amazon.com.br/",
    "https://www.amazon.ca/",
    "https://www.amazon.cn/",
    "https://www.amazon.fr/",
    "https://www.amazon.de/",
    "https://www.amazon.in/",
    "https://www.amazon.it/",
    "https://www.amazon.co.jp/",
    "https://www.amazon.com.mx/",
    "https://www.amazon.es/",
    "https://www.amazon.co.uk/",
    "https://www.amazon.com/"
  ]
}